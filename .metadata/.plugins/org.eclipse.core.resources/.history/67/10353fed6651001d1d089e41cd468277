package main;

import java.awt.Color;
import java.text.DecimalFormat;
import java.awt.Font;
import java.awt.Graphics2D;


public class UI 
{
	GamePainel gp;
	Graphics2D g2;
	Font  arial_40, arial_80B;
	
	public boolean messageOn = false;
	public String message = "";
	int messageCounter = 0;
	public boolean gameFinished = false;
	
	double playTime;
	DecimalFormat dFormat = new DecimalFormat("#0.00");
	
	
	public int comandoN = 0;
	
	
	public UI(GamePainel gp)
	{
		this.gp = gp;
		
		arial_40 = new Font("Arial", Font.PLAIN, 40);
		arial_80B = new Font("Arial", Font.BOLD, 80);	
	}
	
	
	public void showMessage(String text) 
	{
		
		message = text;
		messageOn = true;
	}
	
	public void draw(Graphics2D g2)
	{
		this.g2 = g2;
		
		
		
		g2.setFont(arial_40);
		g2.setColor(Color.white);
		
		
		// Menu
		if(gp.gameState == gp.menuState)
		{
			drawMenuScreen();
		}
		
		// Play
		if(gp.gameState == gp.playState)
		{
			
		}
		// Pause
		if(gp.gameState == gp.pauseState)
		{
			drawPauseScreen();
		}	
		
	}
	
	public void drawMenuScreen()
	{
		
		//g2.setColor(new Color(0,0,0));
		
		g2.drawImage(gp.player.menufundo, 0, 0, gp.screenLargura, gp.screenAltura, null);
		//g2.fillRect(0, 0, gp.screenLargura, gp.screenAltura);
		
		g2.setFont(g2.getFont().deriveFont(Font.BOLD,80F));
		String text = "Fatec Game";
		
		int x = textoCentralizado(text);
		int y = gp.tileSize*1+20;
		
		//sombra
		g2.setColor(Color.gray);
		g2.drawString(text, x+5, y+5);
		
		g2.setColor(Color.white);
		g2.drawString(text, x, y);
		
		
		// Imagens botÃ£o
		x = textoCentralizado(text)+130;
		y = y +gp.tileSize*2;
		
		g2.drawImage(gp.player.botaojogar, x, y, gp.tileSize*4, gp.tileSize*2, null);
		if(comandoN == 0)
		{
			g2.drawString(">", x-gp.tileSize-10, y+70);
		}
		
		
		g2.drawImage(gp.player.botaoopc, x, y+110, gp.tileSize*4, gp.tileSize*2, null);
		if(comandoN == 1)
		{
			g2.drawString(">", x-gp.tileSize-10, y+180);
		}
		
		
		g2.drawImage(gp.player.botaosair, x, y+220, gp.tileSize*4, gp.tileSize*2, null);
		if(comandoN == 2)
		{
			g2.drawString(">", x-gp.tileSize-10, y+290);
		}
		
	
		
	}
	
	public void drawPauseScreen()
	{
		
		String text = "PAUSED";
		int x = textoCentralizado(text);
		int y = gp.screenAltura/2;
		
		g2.drawString(text, x, y);
	}
	
	public int textoCentralizado(String text)
	{
		int lenght = (int)g2.getFontMetrics().getStringBounds(text, g2).getWidth();
		int x = gp.screenLargura/2 - lenght/2;
		
		return x;
	}
	
	
	
	
}
